<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            font-family: 'Quicksand', sans-serif;
        }

        .nav-link:hover {
            text-decoration: underline;
            color: #198754 !important;
        }

        .navbar-brand {
            font-size: 1.5rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
            <div class="container">
                <a class="navbar-brand text-success fw-bold" asp-page="/User/View">🌱 Cây Trồng Việt</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/User/View">
                                <i class="fas fa-home me-1"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/User/SearchDetail">
                                <i class="fas fa-leaf me-1"></i> Tra cứu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">
                                <i class="fas fa-shield-alt me-1"></i> Chính sách
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#"
                                    id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/images/avatar.png" class="rounded-circle me-2" width="32" height="32"
                                        alt="Avatar" />
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-page="/Profile">Thông tin cá nhân</a></li>
                                    <li><a class="dropdown-item" asp-page="/Auth/Logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-success" asp-page="/Auth/Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
<footer class="bg-forest footer">
    <div class="footer-top py-8">
        <div class="container">
            <div class="row gy-5">
                <!-- Giới thiệu -->
                <div class="col-6 col-lg-4">
                    <h5 class="text-light footer-title-01">Về chúng tôi</h5>
                    <ul class="list-unstyled footer-link-01 m-0">
                        <li><a class="text-light text-opacity-75" href="#">Giới thiệu</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Sứ mệnh</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Đội ngũ</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Lịch sử phát triển</a></li>
                    </ul>
                </div>

                <!-- Hỗ trợ -->
                <div class="col-6 col-lg-4">
                    <h5 class="text-light footer-title-01">Hỗ trợ khách hàng</h5>
                    <ul class="list-unstyled footer-link-01 m-0">
                        <li><a class="text-light text-opacity-75" href="#">Chính sách bảo mật</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Điều khoản sử dụng</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Hướng dẫn mua cây</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Giao hàng & đổi trả</a></li>
                    </ul>
                </div>

                <!-- Liên hệ -->
                <div class="col-6 col-lg-4">
                    <h5 class="text-light footer-title-01">Liên hệ & tư vấn</h5>
                    <ul class="list-unstyled footer-link-01 m-0">
                        <li><a class="text-light text-opacity-75" href="#">Gửi câu hỏi</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Câu hỏi thường gặp</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Tư vấn chọn cây</a></li>
                        <li><a class="text-light text-opacity-75" href="#">Địa chỉ cửa hàng</a></li>
                    </ul>
                </div>
            </div>

            <!-- Đăng ký nhận tin -->
            <div class="row mt-5">
                <div class="col-lg-6">
                    <h5 class="text-light footer-title-01 fs-5">
                        Đăng ký nhận bản tin để nhận ưu đãi và mẹo chăm cây mỗi tuần 🌱
                    </h5>
                    <form class="d-flex flex-row mb-2 p-1 bg-white input-group">
                        <input type="email" class="form-control rounded border-0" placeholder="Nhập email của bạn">
                        <button class="btn btn-success flex-shrink-0" type="submit">Đăng ký</button>
                    </form>
                    <p class="fs-sm text-light text-opacity-75">Chúng tôi cam kết không gửi spam.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer dưới cùng -->
    <div class="footer-bottom small py-3 border-top border-white border-opacity-10">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start py-1">
                    <p class="m-0 text-light text-opacity-75">
                        © 2025 Bản quyền thuộc về <a class="text-reset" href="#">CayTrong.vn</a>
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end py-1">
                    <ul class="nav justify-content-center justify-content-md-end list-unstyled footer-link-01 m-0">
                        <li class="p-0 mx-3 ms-md-0 me-md-3"><a href="#" class="text-light text-opacity-75">Chính sách</a></li>
                        <li class="p-0 mx-3 ms-md-0 me-md-3"><a href="#" class="text-light text-opacity-75">Hỏi đáp</a></li>
                        <li class="p-0 mx-3 ms-md-0 me-md-3"><a href="#" class="text-light text-opacity-75">Liên hệ</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>